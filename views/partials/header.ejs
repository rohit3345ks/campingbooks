                  <ul class="navbar-nav">
                    <li class="nav-item active">
                      <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>
					 <% if(!currentUser){  %>
                    <li class="nav-item">
                      <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/register">Sign Up</a>
                    </li>
					 <% }else{  %>
					  <li class="nav-item"><a class="nav-link" href="/campgrounds">Welcome <%= currentUser.username %> </a></li>
